<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/item_view_pager_question_scene2"
    android:id="@+id/item_view_pager_question_motionLayout">


    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/item_view_pager_question_easyFlipView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:flipOnTouch="false"
        app:flipEnabled="true"
        app:flipDuration="400"
        app:flipFrom="right"
        app:flipType="horizontal"
        app:autoFlipBack="false">

        <!-- Back Layout Goes Here -->
        <include layout="@layout/item_flip_card_question_back" />

        <!-- Front Layout Goes Here -->
        <include layout="@layout/item_flip_card_question_front" />

    </com.wajahatkarim3.easyflipview.EasyFlipView>


</androidx.constraintlayout.motion.widget.MotionLayout>